<div class="text-success heading m-5 text-center"><%= @tournament_year.tournament.name%></div>
<div class="row justify-content-center">
    <div class="col-12 col-lg-6">
        <%= image_tag("ny.jpg", class: "img-fluid") %>
    </div>
</div>
<div class="row mt-3 justify-content-center">
    <div class="text-body col-12 col-lg-6">
        開催都市 : <%= @tournament_year.tournament.city %><br>
        開催期間 : <%= l @tournament_year.first_day %> ~  <%= l @tournament_year.last_day %><br>
        <a href="#">公式サイトへ</a>
    </div>
</div>
<div>
    <div class="text-success heading m-5 text-center">出場選手一覧</div>
    <%= render @tournament_year.tournament_year_and_players %>
</div>
<div>
    <div class="text-success heading m-5 text-center">試合一覧</div>
    <div class="row justify-content-center">
        <div class="text-body  col-md-9 justify-content-between row">
            <%= render @tournament_year.matches %>
        </div>
    </div>
</div>
