<% unless tournament_days_array.size == 0 %>
    <div class="text-center m-5">
        <div class="text-success m-3">
            <h2>開催期間</h2>
        </div>
        <%= l tournament_year.first_day %> ~  <%= l tournament_year.last_day %>
    </div>
    <div>
        <div class="text-success text-center m-3">
            <h2>出場選手一覧</h2>
        </div>
        <%= render tournament_year.tournament_year_and_players %>
    </div>
    <div>
        <%= render 'shared/match_select_form', 
            path: tournament_year_day_show_path(tournament_year), param: :day, 
            data_array: tournament_days_array, 
            selected_data: selected_tournament_day, 
            button_title: "選択日程の試合表示", 
            selected_tournament_year_id: selected_tournament_year_id
        %>
        <div class="row justify-content-center">
            <div class="col-md-9 justify-content-between row" id="matches">
                <%= render  selected_tournament_day_matches %>
            </div>
        </div>
    </div>
<% else %>
<div class="text-success text-center m-5">
    <h2>試合日程はまだ発表されていません</h2>
</div>
<% end %>
