<div class="text-success heading m-5 text-center"><%= @player.name%></div>

<div class="text-success heading m-5 text-center">試合一覧</div>
<ul>
   
    <% @tournament_year_and_players.each do |tournament_year_and_player| %>
        <li class="text-body">
            <%= tournament_year_and_player.tournament_year.tournament.name %>
            <div class="row justify-content-center">
                <div class="mt-3 col-md-9 col-lg-8 justify-content-between row">
                    <%= render tournament_year_and_player.matches %>
                </div>
            </div>
        </li>
    <% end %>
  
</ul>
