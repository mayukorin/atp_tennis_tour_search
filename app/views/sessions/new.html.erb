<%= content_for :heightAdjustment do %>
    <div class="height-adjust"></div>
<% end %>
<div class="text-success m-3 text-center">
    <h2>ログイン</h2>
</div>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <%= form_with(url: login_path, scope: :session, local: true, html: { novalidate: true}) do |f| %>
            <div class="mb-3">
                <%= f.label :email, "メールアドレス", class: "form-label text-success" %>
                
                <%= f.email_field :email, class: "form-control form-control-lg" %>
                
            </div>
            <div class="mb-3">
                <%= f.label :password, "パスワード", class: "form-label text-success" %>
                
                <%= f.password_field :password, class: "form-control form-control-lg" %>
            </div>
            <div class="mb-3 row justify-content-center">
                <%= f.submit "ログイン", class: "btn btn-primary btn-success col-4 btn-lg" %>
            </div>
        <% end %>
        <p>ユーザ登録は<%= link_to "こちらから", new_user_path%>
    </div>
</div>

